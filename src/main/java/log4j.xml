<?xml version="1.0" encoding="GB2312"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<appender name="STDOUT" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %-5p - [%C{1}] %m%n" />
		</layout>
	</appender>

	<appender name="console" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="log/console.log" />
		<param name="Append" value="true" />
		<param name="MaxBackupIndex" value="3" />
		<param name="MaxFileSize" value="20MB" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d [%t] %p - %m%n" />
		</layout>
	</appender>
	<appender name="file" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="log/file.log" />
		<param name="Append" value="true" />
		<param name="MaxBackupIndex" value="3" />
		<param name="MaxFileSize" value="20MB" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d [%t] %p - %m%n" />
		</layout>
	</appender>
		<appender name="all" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="log/all.log" />
		<param name="Append" value="true" />
		<param name="MaxBackupIndex" value="3" />
		<param name="MaxFileSize" value="20MB" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d [%t] %p - %m%n" />
		</layout>
	</appender>
	

	<logger name="com.test.log4j.console">
		<level value="info" />
		<appender-ref ref="console" />
		<appender-ref ref="all" />
	</logger>

	<logger name="com.test.log4j.file">
		<level value="info" />
		<appender-ref ref="file" />
		<appender-ref ref="all" />
	</logger>

	<root>
		<level value="info" />
		<appender-ref ref="STDOUT" />
		
	</root>
</log4j:configuration>